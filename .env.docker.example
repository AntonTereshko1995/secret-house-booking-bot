# Docker Compose Environment Variables
# Copy this file to .env and fill in your values

# Environment
ENV=debug
DEBUG=true

# Backend API Key (shared between backend and bot)
BACKEND_API_KEY=your-secret-api-key-change-this

# Database
DATABASE_URL=sqlite:///./data/the_secret_house.db

# Telegram Bot
TELEGRAM_TOKEN=your-telegram-bot-token
ADMIN_CHAT_ID=123456789
INFORM_CHAT_ID=123456789

# Google Calendar
GOOGLE_CREDENTIALS=/app/settings/credentials.json
CALENDAR_ID=your-calendar-id@group.calendar.google.com

# OpenAI GPT
GPT_KEY=sk-your-openai-api-key
GPT_PROMPT=Your GPT prompt for customer service

# Logging
LOGTAIL_TOKEN=your-logtail-token
LOGTAIL_SOURCE=your-logtail-source

# Business Configuration
BANK_CARD_NUMBER=1234567890123456
BANK_PHONE_NUMBER=+375291234567
ADMINISTRATION_CONTACT=@admin_username
SETTINGS_PATH=/app/settings/
